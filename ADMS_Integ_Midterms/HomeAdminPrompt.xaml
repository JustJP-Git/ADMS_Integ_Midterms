<Window x:Class="ADMS_Integ_Midterms.HomeAdminPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADMS_Integ_Midterms"
        mc:Ignorable="d"
        Title="HomeAdminPrompt" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="What would you like to do?" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontSize="48"/>
        <Button x:Name="btnStudents" Content="Manage Students" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="62" FontSize="24" Click="btnStudents_Click"/>
        <Button x:Name="btnUsers" Content="Manage All Users" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Width="300" Height="60" FontSize="24" Click="btnUsers_Click"/>
        <Button x:Name="btnLogOut" Content="Log Out" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Height="60" Width="300" FontSize="24" Click="btnLogOut_Click"/>

    </Grid>
</Window>
