<Window x:Class="ADMS_Integ_Midterms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADMS_Integ_Midterms"
        mc:Ignorable="d"
        Title="MainWindow" Height="195" Width="398" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="login_btn" Content="Login" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Width="218" Click="login_btn_Click"/>
        <Label Content="User ID" HorizontalAlignment="Left" Margin="34,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="user_txt" HorizontalAlignment="Left" Margin="137,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="34,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pass_txt" HorizontalAlignment="Left" Margin="137,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <Label Content="Welcome to Northville University!" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Margin="0,8,0,0"/>
    </Grid>
</Window>
